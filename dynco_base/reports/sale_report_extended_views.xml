<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_product_search_inherit_knk" model="ir.ui.view">
            <field name="name">view.order.product.search.inherit.knk</field>
            <field name="model">sale.report</field>
            <field name="inherit_id" ref="sale.view_order_product_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='filter_date']" position="after">
                    <filter name="filter_invoice_date" date="invoice_date" default_period="this_month"/>
                </xpath>
                <xpath expr="//filter[@name='Category']" position="after">
                    <filter string="Product Brand" name="product_brand" context="{'group_by':'product_brand_lead'}"/>
                </xpath>
                <xpath expr="//filter[@name='date']" position="after">
                    <filter string="Invoice Date" name="invoice_date" context="{'group_by':'invoice_date'}"/>
                </xpath>
                <xpath expr="//field[@name='industry_id']" position="replace" />
                <xpath expr="//field[@name='categ_id']" position="replace" />
                <xpath expr="//field[@name='company_id']" position="replace" />
                <xpath expr="//field[@name='country_id']" position="after">
                    <field name="website_id"/>
                    <field name="product_brand_lead"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="before">
                    <xpath expr="//field[@name='partner_id']" position="move"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <xpath expr="//field[@name='categ_id']" position="move"/>
                </xpath>
            </field>
        </record>
