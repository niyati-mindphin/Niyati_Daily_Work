<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="knk_view_partner_property_form_inh">
            <field name="name">knk.res.partner_bank.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='accounting_entries']" position="after">
                    <group>
                        <field name="preferred_bank_id"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="view_in_invoice_bill_tree_inherit" model="ir.ui.view">
            <field name="name">account.out.invoice.tree.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_bill_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="vednor_2_ref" string="2. Ref."/>
                </xpath>
            </field>
        </record>

        <record id="view_is_default_b2b_fiscal_position_inherit" model="ir.ui.view">
            <field name="name">view.is.default.b2b.fiscal.position.inherit</field>
            <field name="model">account.fiscal.position</field>
            <field name="inherit_id" ref="account.view_account_position_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat_required']" position="after">
                    <field name="is_deafult_b2b" />
                </xpath>
            </field>
        </record>

