<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="signup_fields_extend" inherit_id="auth_signup.fields" name="Signup Fields Extend">
            <xpath expr="//div[hasclass('field-name')]/label[@for='name']" position="replace">
                <label for="name">First Name</label>
            </xpath>
            <xpath expr="//div[hasclass('field-password')]" position="before">
                <t t-if="website.is_signup_view">
                    <div class="form-group field-last_name">
                        <label for="last_name">Last Name</label>
                        <input type="text" name="last_name" t-att-value="last_name" id="last_name"
                            class="form-control form-control-sm" placeholder="e.g. John Doe"
                            required="required"
                            t-att-readonly="'readonly' if only_passwords else None"
                            t-att-autofocus="'autofocus' if login and not only_passwords else None" />
                    </div>

                    <div class="form-group field-street">
                        <label for="street" class="control-label">Address</label>
                        <input type="text" name="street" t-att-value="street"
                               id="street" class="form-control"
                               required="required"
                               t-att-readonly="'readonly' if only_passwords else None"
                               t-att-autofocus="'autofocus' if login and not only_passwords else None" />
                    </div>

                    <div class="form-group field-streetfield-country">
                        <label for="country_id" class="control-label">Country
                        </label>
                        <select name="country_id" id="country_id"
                                class="form-control"
                                required="required"
                                t-att-readonly="'readonly' if only_passwords else None"
                                t-att-autofocus="'autofocus' if login and not only_passwords else None">
                                <option value="">Select</option>
                                <t t-foreach="countries or []" t-as="country">
                                    <option t-if="country.code in ['CH', 'DE', 'AT', 'LI', 'NL', 'BE', 'LU', 'FR', 'DK', 'PL', 'CZ', 'IT']" t-att-value="country.id">
                                        <t t-esc="country.name"/>
                                    </option>
                                </t>
                        </select>
                    </div>
                </t>
            </xpath>
        </template>

        <template id="login_inherit_view" inherit_id="web.login">
            <xpath expr="//div[4]" position="replace">
                <div t-attf-class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                    <button type="submit" class="btn btn-primary btn-block">Log in</button>
                </div>
                <div t-attf-class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                    <a class="btn btn-primary btn-block" t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}">Create New Account</a>
                    <t t-if="debug">
                        <button type="submit" name="redirect" value="/web/become" class="btn btn-link btn-sm btn-block d-flex align-items-center flex-row-reverse">Log in as superuser</button>
                    </t>
                    <div class="o_login_auth"/>
                    <div class="justify-content-between mt-2 d-flex small">
                        <a></a>
                        <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}">Reset Password</a>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
