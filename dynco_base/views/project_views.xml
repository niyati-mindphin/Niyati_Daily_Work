<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="edit_project_inherit_private_project" model="ir.ui.view">
        <field name="name">project.project.form.inherit.private_project</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='privacy_visibility']" position="after">
                <field name='private_project_users' widget='many2many_tags' attrs="{'invisible': [('privacy_visibility','!=','private_users')]}" />
            </xpath>
        </field>
    </record>
    <record id="view_task_kanban_dynco_base" model="ir.ui.view">
        <field name="name">project.task.kanban.dynco_base</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <div class="dropdown-divider" position="before">
                <a t-if="widget.editable" role="menuitem" class="dropdown-item" name="toggle_active" type="object">
                    <t t-if="record.active.raw_value">Archive</t>
                    <t t-if="!record.active.raw_value">Restore</t>
                </a>
            </div>
        </field>
    </record>
</odoo>