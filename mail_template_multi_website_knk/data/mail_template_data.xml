<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="my_dynco_mail_template_data_portal_welcome" model="mail.template">
            <field name="name">Multi Website Portal: User Invite</field>
            <field name="model_id" ref="portal.model_portal_wizard_user" />
            <field name="subject">Your {{ object.user_id.partner_id.website_id.name or object.user_id.company_id.name}} Account</field>
            <field name="email_to">{{ object.user_id.email_formatted }}</field>
            <field name="body_html" type="html">
                <table style="box-sizing:border-box;border-collapse:collapse;padding-top: 16px; background-color: #F1F1F1; font-family:Poppins; color: #454748; width: 100%; border-collapse:separate;" width="100%" cellspacing="0" cellpadding="0" border="0">
                    <tbody>
                        <tr>
                            <td align="center">
                                <table style="box-sizing:border-box;border-collapse:collapse;padding: 16px; background-color: white; color: #454748; border-collapse:separate;" width="590" cellspacing="0" cellpadding="0" border="0">
                                    <tbody>
                                        <!-- HEADER -->
                                        <tr>
                                            <td style="min-width: 590px;" align="center">
                                                <table style="box-sizing:border-box;border-collapse:collapse;min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;" width="590" cellspacing="0" cellpadding="0" border="0">
                                                    <tbody>
                                                        <tr>
                                                            <td valign="middle">
                                                                <span style="font-size: 10px;">Your
                                                                    <t t-out="object.user_id.partner_id.website_id.name" /> Account</span><br/>
                                                                <span style="font-size: 20px; font-weight: bold;">
                                                                    <t t-out="object.user_id.name" contenteditable="false" data-oe-t-inline="true"></t>
                                                                </span>
                                                            </td>
                                                            <td valign="middle" align="right">
                                                                <img style="box-sizing:border-box;border-style: none; vertical-align: middle; padding: 0px; margin: 0px; height: auto; width: 80px;" t-attf-src="https://my.dynco.swiss/web/image/website/{{ object.user_id.partner_id.website_id.id }}/logo" t-attf-alt="{{ object.user_id.partner_id.website_id.name }}" width="80px" height="0"/>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td colspan="2" style="text-align:center;">
                                                                <hr style="border-style:none;border-image-width:1;border-image-source:none;border-image-slice:100%;border-image-repeat:stretch;border-image-outset:0;border-left-color:currentcolor;border-bottom-color:currentcolor;border-right-color:currentcolor;margin:12px 0 12px 0;border-top-color:rgba(0, 0, 0, 0.1);border-top-style:solid;border-top-width:1px;border-left-width:0px;border-bottom-width:0px;border-right-width:0px;overflow-y:visible;overflow-x:visible;height:0px;box-sizing:content-box;background-color:#cccccc;border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin:16px 0px 16px 0px;" width="100%" contenteditable="false"/>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                        <!-- CONTENT -->
                                        <tr>
                                            <td style="min-width: 590px;" align="center">
                                                <table style="box-sizing:border-box;border-collapse:collapse;min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;" width="590" cellspacing="0" cellpadding="0" border="0">
                                                    <tbody>
                                                        <tr>
                                                            <td style="font-size: 13px;" valign="top">
                                                                <div style="font-size:13px;font-family:&quot;Poppins&quot;">
                                                                    Dear <t t-out="object.user_id.name or ''" contenteditable="false" data-oe-t-inline="true"></t>,<br/> <br/>
                                                                    You have been given access to <t t-out="object.user_id.company_id.name" contenteditable="false" data-oe-t-inline="true"></t>'s portal.<br/>
                                                                    Your login account data is:
                                                                    <ul style="box-sizing:border-box;margin:0px 0 12px 0;">
                                                                        <li>Username: <t t-out="object.user_id.login or ''" contenteditable="false" data-oe-t-inline="true"></t>
                                                                        </li>
                                                                    </ul>
                                                                    You can set or change your password via the following url:
                                                                    <ul class="list-unstyled">
                                                                        <li style="margin-left:34%"><a class='btn btn-primary' t-attf-href="{{ object.user_id.signup_url }}">
                                                                                <span contenteditable="false" data-oe-t-inline="true">Activate your account</span>
                                                                            </a></li>
                                                                    </ul>
                                                                    <t t-out="object.wizard_id.welcome_message or ''" contenteditable="false" data-oe-t-inline="true"></t><br/><br/>
                                                                    Your dynco Team
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td style="text-align:center;">
                                                                <hr style="border-style:none;border-image-width:1;border-image-source:none;border-image-slice:100%;border-image-repeat:stretch;border-image-outset:0;border-left-color:currentcolor;border-bottom-color:currentcolor;border-right-color:currentcolor;margin:12px 0 12px 0;border-top-color:rgba(0, 0, 0, 0.1);border-top-style:solid;border-top-width:1px;border-left-width:0px;border-bottom-width:0px;border-right-width:0px;overflow-y:visible;overflow-x:visible;height:0px;box-sizing:content-box;background-color:#cccccc;border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;" width="100%" contenteditable="false"/>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr><!-- FOOTER -->
                                        <tr>
                                            <td style="min-width: 590px;" align="center">
                                                <table style="box-sizing:border-box;border-collapse:collapse;min-width: 590px; background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;" width="590" cellspacing="0" cellpadding="0" border="0">
                                                    <tbody>
                                                        <tr>
                                                            <td valign="middle" align="left">
                                                                <t t-out="object.user_id.company_id.name" contenteditable="false" data-oe-t-inline="true"></t>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td style="opacity: 0.7;" valign="middle" align="left">
                                                                <t t-if="object.user_id.company_id.email" data-oe-t-group="0" data-oe-t-group-active="true" data-oe-t-inline="true">
                                                                    <a style="box-sizing:border-box;text-decoration:none;background-color:transparent;color:#008784; color: #454748;" t-attf-href="'mailto:%s' % {{ object.user_id.company_id.email }}">
                                                                        <t t-out="object.user_id.company_id.email" contenteditable="false" data-oe-t-inline="true"></t>
                                                                    </a>
                                                                </t>
                                                                <t t-if="object.user_id.company_id.website" data-oe-t-group="1" data-oe-t-group-active="true" data-oe-t-inline="true">
                                                                    <a style="box-sizing:border-box;text-decoration:none;background-color:transparent;color:#008784; color: #454748;" t-attf-href="'%s' % {{ object.user_id.company_id.website }}">
                                                                        <t t-out="object.user_id.company_id.website" contenteditable="false" data-oe-t-inline="true"></t>
                                                                    </a>
                                                                </t>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True" />
        </record>
        <record id="my_dynco_sale_order_new_mail" model="mail.template">
            <field name="name">Sales Order: Send by email (my.dynco)-new</field>
            <field name="model_id" ref="sale.model_sale_order" />
            <field name="subject">Your my.dynco order - order confirmation</field>
            <field name="email_to">{{ object.partner_id.id }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="email_cc">{{ object.website_id.name == 'my.dynco' and 'dispo@dynco.ch' or '' }}</field>
            <field name="body_html" type="html">
                <div style="font-size:13px;font-family:&quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif;text-align: center;">
                    <img style="max-width: 25%; height: auto;" class="o_we_custom_image o_modified_image_to_save o_we_image_cropped o_img_fluid_fixed_width" src="https://www.climaqua.com/web/image/1776268-80b4794c/my_dynco_lilas_1-1.png?access_token=8eed61f6-badb-47c8-bc17-45ecbdd47f49"/>
                </div>
                <div style="font-size:13px;font-family:&quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif;"><span style="color: #444b5a;font-size: 13px;font-style: normal;font-weight: 400;background-color: #ffffff"><br/>Dear ,</span><t t-out="object.sudo().partner_id.name" contenteditable="false" data-oe-t-inline="true"></t>,<br/><br/>
                    <div style="font-size:13px;font-family:&quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif;margin: 0px; padding: 0px;">
                        <span style="font-size:13px;font-family:&quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif;margin: 0px; padding: 0px;"><span style="color: #444b5a;font-size: 13px;font-style: normal;font-weight: 400;background-color: #ffffff">This worked well! We have received your order!</span><br/><span style="color: #444b5a;font-size: 13px;font-style: normal;font-weight: 400;background-color: #ffffff">Enclosed you will find the order confirmation&amp;</span></span>
                        <a t-att-href="object._get_share_url()" style="text-decoration:none;box-sizing:border-box;background-color:transparent;color:inherit;">
                            <t t-out="object.name" contenteditable="false" data-oe-t-inline="true"></t>
                        </a>
                        <span style="font-size:13px;font-family:&quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif;margin: 0px; padding: 0px;">
                            <span style="color: #444b5a;font-size: 13px;font-style: normal;font-weight: 400;background-color: #ffffff">for your my.dynco order.</span></span>
                    </div>
                    <div style="font-size:13px;font-family:&quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif;margin: 0px; padding: 0px;"><br/></div>If you have any questions, simply reply to this e-mail.<br/>Thank you for your trust.<br/><br/>Kind regards<br/>Your my.dynco team<br/><br/>Find out more at <a href="https://my.dynco.ch" style="text-decoration:none;box-sizing:border-box;background-color:transparent;color:#008f8c;"><span data-o-link-zws="start" contenteditable="false">​</span>my.dynco.ch<br/></a><span data-o-link-zws="after" contenteditable="false">​</span><br/>
                </div>
            </field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True" />
        </record>
    </data>
    <data>
        <record id="my_dynco_sale_order_confirm_mail" model="mail.template">
            <field name="name">Sales Order: Send by Confirm (my.dynco)-new</field>
            <field name="model_id" ref="sale.model_sale_order" />
            <field name="subject">Your my.dynco order - order confirmation</field>
            <field name="email_to">{{ object.partner_id.id }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="email_cc">{{ object.website_id.name == 'my.dynco' and 'dispo@dynco.ch' or '' }}</field>
            <field name="body_html" type="html">
                <div style="font-size:13px;font-family:&quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif;text-align: center;">
                    <img style="max-width: 25%; height: auto;" class="o_we_custom_image o_modified_image_to_save o_we_image_cropped o_img_fluid_fixed_width" src="https://www.climaqua.com/web/image/1776268-80b4794c/my_dynco_lilas_1-1.png?access_token=8eed61f6-badb-47c8-bc17-45ecbdd47f49"/>
                </div>
                <div style="font-size:13px;font-family:&quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif;"><span style="color: #444b5a;font-size: 13px;font-style: normal;font-weight: 400;background-color: #ffffff"><br/>Dear ,</span> <t t-out="object.sudo().partner_id.name" contenteditable="false" data-oe-t-inline="true"></t>,<br/><br/>
                    <div style="font-size:13px;font-family:&quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif;margin: 0px; padding: 0px;">

                        <t t-set="delivery_date_done" t-value="object.picking_ids[0].date_done"/>
                        <!-- for on time -->
                        <t t-if="delivery_date_done and delivery_date_done &lt; object.schedule_date">
                            <span style="font-size:13px;font-family:&quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif;margin: 0px; padding: 0px;"><span style="color: #444b5a;font-size: 13px;font-style: normal;font-weight: 400;background-color: #ffffff">The delivery date of your order <t t-out="object.name or ''"/> from <t t-out="object.brand_id.name or ''"/> has been confirmed.</span><br/><span style="color: #444b5a;font-size: 13px;font-style: normal;font-weight: 400;background-color: #ffffff">Your order will be dispatched on time: <t t-out="object.schedule_date or ''"/>&amp;</span></span>
                        </t>

                        <!-- for delay -->
                        <t t-elif="delivery_date_done and delivery_date_done &gt; object.schedule_date">
                            <span style="font-size:13px;font-family:&quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif;margin: 0px; padding: 0px;"><span style="color: #444b5a;font-size: 13px;font-style: normal;font-weight: 400;background-color: #ffffff">The delivery date of your order <t t-out="object.name or ''"/> from <t t-out="object.brand_id.name or ''"/> has been confirmed.</span><br/><span style="color: #444b5a;font-size: 13px;font-style: normal;font-weight: 400;background-color: #ffffff">Please be aware: we need to update the delivery date of your order: <t t-out="delivery_date_done or ''"/>&amp;</span></span>
                        </t>

                        <!-- for schedule date is not set -->
                        <t t-else="not delivery_date_done">
                            <span style="font-size:13px;font-family:&quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif;margin: 0px; padding: 0px;"><span style="color: #444b5a;font-size: 13px;font-style: normal;font-weight: 400;background-color: #ffffff">The delivery date of your order <t t-out="object.name or ''"/> from <t t-out="object.brand_id.name or ''"/> has been confirmed.</span><br/><span style="color: #444b5a;font-size: 13px;font-style: normal;font-weight: 400;background-color: #ffffff">Your order will be dispatched on time: <t t-out="object.schedule_date or ''"/>&amp;</span></span>
                        </t>

                    </div>
                    <div style="font-size:13px;font-family:&quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif;margin: 0px; padding: 0px;"><br/></div>If you have any questions, simply reply to this e-mail.<br/>Thank you for your trust.<br/><br/>Kind regards<br/>Your my.dynco team<br/><br/>Find out more at <a href="https://my.dynco.ch" style="text-decoration:none;box-sizing:border-box;background-color:transparent;color:#008f8c;"><span data-o-link-zws="start" contenteditable="false">​</span>my.dynco.ch<br/></a><span data-o-link-zws="after" contenteditable="false">​</span><br/>
                </div>
            </field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True" />
        </record>
    </data>
</odoo>
